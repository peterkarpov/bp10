@model ESN.Domain.Entities.Photobook

@{
    ViewBag.Title = "Edit Photobook";
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-offset-3 col-md-6">
                    @using (Html.BeginForm("Edit", "Photobooks", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary()

                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m=>m.Title)</label>
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                        </div>

                            <button type="submit" class="btn btn-default">
                                Save Changes
                                <br>
                            </button>
                            @Html.ActionLink("Cancel", "Index", null, new
                       {
                           @class = "btn btn-default"
                       })
                    }
                </div>
            </div>
        </div>
    </div>
</div>